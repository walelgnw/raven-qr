<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/qr_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:padding="8dp"
        android:text="Show"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/qr_image"
        android:layout_below="@id/qr_title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_baseline_qr_code_24" />
    <LinearLayout
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_image"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sec_status"
            android:text="Security Stats"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sec_value"
            android:text="Open/Protected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:background="@drawable/box_bg"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/screen"
        android:orientation="vertical">
        <TextView
            android:id="@+id/data_status"
            android:background="@color/purple_500"
            android:text="QR Data"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/data_value"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:text="QR Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>